@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <form method="post" enctype="multipart/form-data" asp-controller="SendMessage" asp-action="Index">
            <div class="form-group">
                <div class="col-sm-12">
                    <textarea type="text" name="msg" value="" placeholder="Write your message.." style="width:100%"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="text-align:left">
                    <input class="btn btn-primary" type="submit" value="Send" />
                </div>
            </div>
        </form>
    </div>
